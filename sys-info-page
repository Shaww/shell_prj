#!/bin/bash

# program to output a system information page

REPORT_HTML='sys-info-page.html'

rm -f "$REPORT_HTML"
# trap "rm -f $REPORT_HTML" EXIT

TITLE="System Information Report for $HOSTNAME"
CURRENT_TIME=$(date)
TIME_STAMP="Generated $CURRENT_TIME, by $USER"

cat <<EOF > $REPORT_HTML
<HTML>
	<HEAD>
		<TITLE>$TITLE</TITLE>
	</HEAD>
	<BODY>
		<H1>$TITLE</H1>
		<P>$TIME_STAMP</P>
		Page Body
	</BODY>
</HTML>
EOF

exit 0
